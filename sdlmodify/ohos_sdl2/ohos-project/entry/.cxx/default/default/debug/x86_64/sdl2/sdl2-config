#!/bin/sh

prefix=C:/Program Files (x86)/entry
exec_prefix=${prefix}
exec_prefix_set=no
libdir=${exec_prefix}/lib

#usage="\
#Usage: $0 [--prefix[=DIR]] [--exec-prefix[=DIR]] [--version] [--cflags] [--libs]"
usage="\
Usage: $0 [--prefix[=DIR]] [--exec-prefix[=DIR]] [--version] [--cflags] [--libs] [--static-libs]"

if test $# -eq 0; then
      echo "${usage}" 1>&2
      exit 1
fi

while test $# -gt 0; do
  case "$1" in
  -*=*) optarg=`echo "$1" | sed 's/[-_a-zA-Z0-9]*=//'` ;;
  *) optarg= ;;
  esac

  case $1 in
    --prefix=*)
      prefix=$optarg
      if test $exec_prefix_set = no ; then
        exec_prefix=$optarg
      fi
      ;;
    --prefix)
      echo $prefix
      ;;
    --exec-prefix=*)
      exec_prefix=$optarg
      exec_prefix_set=yes
      ;;
    --exec-prefix)
      echo $exec_prefix
      ;;
    --version)
      echo 2.0.12
      ;;
    --cflags)
      echo -I${prefix}/include/SDL2  -D_REENTRANT
      ;;
    --libs)
      echo -L${exec_prefix}/lib  -lpthread -lSDL2 
      ;;
    --static-libs)
#    --libs|--static-libs)
      echo -L${exec_prefix}/lib  -lD:/601/DevEco Studio/sdk/default/openharmony/native/sysroot/usr/lib/x86_64-linux-ohos/libohaudio.so -lcjson -lD:/601/DevEco Studio/sdk/default/openharmony/native/sysroot/usr/lib/x86_64-linux-ohos/libpixelmap_ndk.z.so -lD:/601/DevEco Studio/sdk/default/openharmony/native/sysroot/usr/lib/x86_64-linux-ohos/librawfile.z.so -lD:/601/DevEco Studio/sdk/default/openharmony/native/sysroot/usr/lib/x86_64-linux-ohos/libace_ndk.z.so -lD:/601/DevEco Studio/sdk/default/openharmony/native/sysroot/usr/lib/x86_64-linux-ohos/libhilog_ndk.z.so -lD:/601/DevEco Studio/sdk/default/openharmony/native/sysroot/usr/lib/x86_64-linux-ohos/libace_napi.z.so -lm  -Wl,--no-undefined -lpthread -lSDL2 
      ;;
    *)
      echo "${usage}" 1>&2
      exit 1
      ;;
  esac
  shift
done
